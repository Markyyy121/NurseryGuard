<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#637CFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title=""
        app:menu="@menu/top_app_bar_menu" />

    <!-- Main Content -->
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:text="NurseryGuard"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:text="Baby Room Monitor"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- Monitoring Section -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_heart"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <View
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/circle_green"/>

            <TextView
                android:text="MONITORING"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Cards Row -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Temperature Card -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/card_bg"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:src="@drawable/ic_temp_gauge"
                    android:layout_width="24dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvTemperature"
                    android:text="24Â°C"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Temperature"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Normal Range"
                    android:textSize="12sp"
                    android:textColor="#FF6666"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Humidity Card -->
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/card_bg"
                android:layout_margin="8dp"
                android:padding="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:src="@drawable/ic_humidity_gauge"
                    android:layout_width="24dp"
                    android:layout_height="60dp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvHumidity"
                    android:text="65%"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Humidity"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Optimal Range"
                    android:textSize="12sp"
                    android:textColor="#00BFA6"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Environment Status Box -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/status_bg"
            android:padding="12dp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_check_circle"
                android:layout_width="20dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/tvEnvironmentStatus"
                android:text="Environment Status: SAFE\nTemperature and humidity levels are optimal for baby"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:text="IoT Baby Monitor System"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
